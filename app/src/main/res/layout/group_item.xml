<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="105dp"
    android:background="@drawable/card_shape">


    <TextView
        android:layout_width="200dp"
        android:id="@+id/groupTitle"
        android:textSize="16sp"
        android:layout_marginStart="20dp"
        android:text="Title Here"
        android:textColor="@color/black"
        android:layout_marginEnd="20dp"
        android:maxLines="1"
        android:layout_marginTop="15dp"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/date_image_view"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@+id/groupTitle"
        android:layout_marginStart="20dp"
        android:layout_marginTop="7dp"
        app:srcCompat="@drawable/baseline_access_time"
        app:tint="@color/dark" />

    <TextView
        android:id="@+id/lastChangeValue"
        android:layout_toEndOf="@+id/date_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/groupTitle"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="10dp"
        android:gravity="center"
        android:text="May 23, 2025"
        android:textSize="16sp"/>

    <ImageView
        android:id="@+id/account_num_image_view"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@+id/lastChangeValue"
        android:layout_marginStart="20dp"
        android:layout_marginTop="7dp"
        app:srcCompat="@drawable/account_balance_24"
        app:tint="#808080" />

    <TextView
        android:id="@+id/group_accounts_num"
        android:layout_toEndOf="@+id/account_num_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lastChangeValue"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:gravity="center"
        android:text="10 Accounts"
        android:textSize="16sp"/>


    <TextView
        android:id="@+id/border2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_alignParentBottom="true"
        android:background="#808080"/>


</RelativeLayout>
